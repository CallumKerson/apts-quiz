{
  "name": "apts-quiz",
  "version": "1.0.0",
  "description": "Adult Playfulness Trait Scale (APTS) Quiz - Interactive assessment tool",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.{js,css,yaml}' 'tests/**/*.js' '*.json' '*.md' '*.js' '.github/**/*.yaml'",
    "format:check": "prettier --check 'src/**/*.{js,css,yaml}' 'tests/**/*.js' '*.json' '*.md'",
    "clean": "rm -rf dist/"
  },
  "keywords": [
    "psychology",
    "assessment",
    "playfulness",
    "quiz",
    "static-site"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^28.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "vite": "^7.0.4"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "js-yaml": "^4.1.0",
    "jspdf": "^3.0.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "tests/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "volta": {
    "node": "22.17.0"
  }
}
